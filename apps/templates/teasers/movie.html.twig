<a href="{{ site_path(movie) }}">
    <div class="background spoiler" data-bg="{{ site_asset(movie, 'poster') }}">
        {% if movie.releaseDate != '' %}
            <span class="year">
                {{ movie.releaseDate|date('Y') }}
            </span>
        {% endif %}
    </div>
    <div class="wrapper">
        <h2 class="title">
            {{ movie.title }}
        </h2>
    </div>
</a>