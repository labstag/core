{% set chapters = story.chapters|enable %}
<a href="{{ site_path(story) }}" title="{{ story.title|e('html_attr') }}">
    <div class="background spoiler" data-bg="{{ site_asset(story, 'img') }}"></div>
    <div class="wrapper">
        {% if story.tags|length > 0 %}
            <div class="tags">
                {% for tag in story.tags %}
                    <span class="tag-{{ tag.slug }}">{{ tag.title }}</span>
                {% endfor %}
            </div>
        {% endif %}
        <h2 class="title">
            {{ story.title }}
        </h2>
        {% if configuration.usershow %}
            <div class="author">
                {{ 'Author : %author%'|trans({ '%author%': story.refuser.username }) }}
            </div>
        {% endif %}
        <div class="date">
            {{ 'Creation date : %date%'|trans({ '%date%': story.createdat|date('d/m/Y') }) }}
        </div>
        <div class="chapters">
            {{ 'Number of chapters : %count%'|trans({ '%count%': chapters|length }) }}
        </div>
        <div class="resume">
            {{ story.resume|raw }}
        </div>
    </div>
</a>