{% set chapters = history.chapters|enable %}
<a href="{{ site_path(history) }}">
    <img src="{{ site_asset(history, 'img') }}" alt="{{ history.title|e('html_attr') }}">
    {% if history.tags|length > 0 %}
        <div class="tags">
            {% for tag in history.tags %}
                <span class="tag-{{ tag.slug }}">{{ tag.title }}</span>
            {% endfor %}
        </div>
    {% endif %}
    <div class="title">
        {{ history.title }}
    </div>
    <div class="author">
        {{ 'Author : %author%'|trans({ '%author%': history.refuser.username }) }}
    </div>
    <div class="date">
        {{ 'Date of creation : %date%'|trans({ '%date%': history.createdat|date('d/m/Y') }) }}
    </div>
    <div class="chapters">
        {{ 'Number of chapters : %count%'|trans({ '%count%': chapters|length }) }}
    </div>
    <div class="resume">
        {{ history.resume|raw }}
    </div>
</a>