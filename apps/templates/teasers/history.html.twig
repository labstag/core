<a href="{{ site_path(history) }}">
    <img src="{{ site_asset(history, 'img') }}" alt="{{ history.title|e('html_attr') }}">
    {% if history.tags|length > 0 %}
        <div class="tags">
            {% for tag in history.tags %}
                <span class="tag-{{ tag.slug }}">{{ tag.title }}</span>
            {% endfor %}
        </div>
    {% endif %}
    <div class="title">
        {{ history.title }}
    </div>
    <div class="author">
        {{ history.refuser.username }}
    </div>
    <div class="date">
        {{ history.createdat|date('d/m/Y') }}
    </div>
    <div class="resume">
        {{ history.resume|raw }}
    </div>
</a>