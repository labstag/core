<a href="{{ site_path(person) }}" title="{{ person.title|e('html_attr') }}">
    <div class="background spoiler" data-bg="{{ site_asset(person, 'profile') }}">
    </div>
    <div class="wrapper">
        <h2 class="title">
            {{ person.title }}
        </h2>
    </div>
    {% if figure is defined %}
        <div class="wrapper">
            <h2 class="figure">
                {{ figure }}
            </h2>
        </div>
    {% endif %}
</a>