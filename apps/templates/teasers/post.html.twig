<a href="{{ site_path(post) }}" title="{{ post.title|e('html_attr') }}">
    <div class="background spoiler" data-bg="{{ site_asset(post, 'img') }}"></div>
    <div class="wrapper">
        {% if post.tags|length > 0 %}
            <div class="tags">
                {% for tag in post.tags %}
                    <span class="tag-{{ tag.slug }}">{{ tag.title }}</span>
                {% endfor %}
            </div>
        {% endif %}
        <h3 class="title">
            {{ post.title }}
        </h3>
        <div class="date">
            {{ 'Creation date : %date%'|trans({ '%date%': post.createdat|date('d/m/Y') }) }}
        </div>
        {% if configuration.usershow %}
            <div class="author">
                {{ 'Author : %author%'|trans({ '%author%': post.refuser.username }) }}
            </div>
        {% endif %}
        <div class="resume">
            {{ post.resume|raw }}
        </div>
    </div>
</a>