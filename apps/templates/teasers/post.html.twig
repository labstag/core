<a href="{{ site_path(post) }}">
    <img src="{{ site_asset(post, 'img') }}" alt="{{ post.title|e('html_attr') }}">
    {% if post.tags|length > 0 %}
        <div class="tags">
            {% for tag in post.tags %}
                <span class="tag-{{ tag.slug }}">{{ tag.title }}</span>
            {% endfor %}
        </div>
    {% endif %}
    <div class="title">
        {{ post.title }}
    </div>
    <div class="date">
        {{ 'Creation date : %date%'|trans({ '%date%': post.createdat|date('d/m/Y') }) }}
    </div>
    {% if configuration.user_show %}
        <div class="author">
            {{ 'Author : %author%'|trans({ '%author%': post.refuser.username }) }}
        </div>
    {% endif %}
    <div class="resume">
        {{ post.resume|raw }}
    </div>
</a>