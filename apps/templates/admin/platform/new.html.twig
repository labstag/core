{% form_theme form with '@EasyAdmin/crud/form_theme.html.twig' only %}
<div class="modal-header">
	<h5 class="modal-title">{{ 'Search a new platform'|trans }}</h5>
	<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
	<div class="row">
		<div class="col-md-6">
			{{ form(form) }}
		</div>
		<div class="col-md-6 results">
			{% include "admin/api/game/platform.html.twig" with {'platforms': [], 'page': 1} %}
	</div>
</div>
<div class="modal-footer">
	<div class="d-none ajax-enable">
		{{ 'Traitement in progress...'|trans }}
	</div>
	<div class="d-none ajax-disable">
		{{ 'Traitement finished'|trans }}
	</div>	
	<button type="button" class="btn btn-primary searchdata-modal" data-url="{{ ea_url().setController(controller).setAction('apiPlatform') }}">{{ 'Search'|trans }}</button>
	<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'Close'|trans }}</button>
</div>
