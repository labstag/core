{% form_theme form with '@EasyAdmin/crud/form_theme.html.twig' only %}
<div class="modal-header">
	<h5 class="modal-title">{{ 'Search a new movie'|trans }}</h5>
	<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
	<div class="row">
		<div class="col-md-6">
			{{ form(form) }}
		</div>
		<div class="col-md-6 results">
			{% include "admin/api/movie/list.html.twig" with {'movies': []} %}
		</div>
	</div>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-primary searchdata-modal" data-url="{{ path('admin_api_find_movie', {'_locale': app.request.locale}) }}">{{ 'Search'|trans }}</button>
	<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'Close'|trans }}</button>
</div>
