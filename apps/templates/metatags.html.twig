{% if metatags.description != '' %}
    <meta name="description" content="{{ metatags.description }}"/>
{% endif %}
{% if favicon is not null %}
    <link rel="icon" type="{{ favicon.data.type }}" sizes="{{ favicon.data.width ~'x'~ favicon.data.height }}" href="{{ asset(favicon.public) }}">
{% endif %}
{% if image.public is defined %}
    <meta property="og:image" content="{{ url ~ image.public }}" />
    <meta property="og:image:width" content="{{ image.data.width }}" />
    <meta property="og:image:height" content="{{ image.data.height }}" />
    <meta property="og:image:type" content="{{ image.data.type }}" />
{% endif %}