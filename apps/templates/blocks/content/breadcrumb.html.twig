{% use "elements.html.twig" %}
<nav aria-label="breadcrumb"{% with {attr: block_contextmenu(block)} %}{{ block('attributes') }}{% endwith %}>
    <div class="wrapper">
        <ul>
            <li>
                <a href="{{ path('front') }}">{{ 'Home'|trans }}</a>
            </li>
            {% for row in urls %}
                <li{% if loop.last %} aria-current="page"{% endif %}>
                    {% if loop.last == false %}
                        <a href="{{ path('front', {'slug': row.url})}}">{{ row.title }}</a>
                    {% elseif params|length != 0 %}
                        <a href="{{ path('front', {'slug': row.url})}}">{{ row.title }}</a>
                    {% else %}
                        {{ row.title }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
</nav>