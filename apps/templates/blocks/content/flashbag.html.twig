{% use "elements.html.twig" %}
<div{% with {attr: block_contextmenu(block)} %}{{ block('attributes') }}{% endwith %}>
    <div class="wrapper">
        {% for label, messages in app.flashes %}
            <div class="flash-{{ label }}">
                <div>{{ label }}</div>
                <ul>
                    {% for message in messages %}
                        <li>{{ message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
    </div>
</div>