{% use "elements.html.twig" %}
<section{% with {attr: paragraph_contextmenu(paragraph)} %}{{ block('attributes') }}{% endwith %}>
	<div class="first">
        <div class="background" style="--image-url: url('{{ site_asset(data.entity, 'img') }}')"></div>
        <div class="content">
            <div class="wrapper">
                <h1 class="title">
                    {{ data.entity.title }}
                </h1>
                <div>
                    {{ message }}
                </div> 
            </div>
        </div>
    </div>
    <div class="second">
        {% if app.environment == 'dev' or is_granted('ROLE_ADMIN') %}
            <div class="content">
                <div class="wrapper">
                    <h2>Trace</h2>
                    <pre>{{ trace }}</pre>
                </div>
            </div>
        {% endif %}
    </div>
</section>