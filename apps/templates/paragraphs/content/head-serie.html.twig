{% use "elements.html.twig" %}
<section{% with {attr: paragraph_contextmenu(paragraph)} %}{{ block('attributes') }}{% endwith %}>
	<div class="background" style="--image-url: url('{{ site_asset(serie, 'img') }}')"></div>
	<div class="content">
        <div class="wrapper">
            <h3 class="title">
                {{ serie.title }}
            </h3>
            {% if serie.categories|length > 0 %}
                <div class="categories">
                    {% for category in serie.categories %}
                        <span class="category-{{ category.slug }}">{{ category.title }}</span>
                    {% endfor %}
                </div>
            {% endif %}
            <div class="citation">
                {{ serie.citation|raw }}
            </div>
            <div class="date">
                {{ 'First release date : %date%'|trans({ '%date%': serie.releaseDate|format_date(locale: 'fr_FR', dateFormat: 'full') }) }}
                <br />
                {{ 'Last release date : %date%'|trans({ '%date%': serie.lastreleaseDate|format_date(locale: 'fr_FR', dateFormat: 'full') }) }}
            </div>
            <div class="description">
                {{ serie.description|raw }}
            </div>
        </div>
    </div>
</section>
