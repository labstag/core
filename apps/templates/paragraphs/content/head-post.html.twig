<section id="{{ paragraph_id(paragraph) }}" class="{{ paragraph_class(paragraph) }}">
	<div class="background" style="--image-url: url('{{ site_asset(post, 'img') }}')"></div>
	<div class="wrapper">
		{% if post.tags|length > 0 %}
            <div class="tags">
                {% for tag in post.tags %}
                    <span class="tag-{{ tag.slug }}">{{ tag.title }}</span>
                {% endfor %}
            </div>
        {% endif %}
		<div class="title">
			{{ post.title }}
		</div>
		{% if post.categories|length > 0 %}
            <div class="categories">
                {% for category in post.categories %}
                    <span class="category-{{ category.slug }}">{{ category.title }}</span>
                {% endfor %}
            </div>
        {% endif %}
		<div class="date">
			{{ post.createdat|date('d/m/Y') }}
		</div>
	</div>
</section>
