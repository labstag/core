{% set chapters = history.chapters|enable %}
<section id="{{ paragraph_id(paragraph) }}" class="{{ paragraph_class(paragraph) }}">
	<div class="background" style="--image-url: url('{{ site_asset(history, 'img') }}')"></div>
	<div class="wrapper">
		{% if history.tags|length > 0 %}
            <div class="tags">
                {% for tag in history.tags %}
                    <span class="tag-{{ tag.slug }}">{{ tag.title }}</span>
                {% endfor %}
            </div>
        {% endif %}
		<div class="title">
			{{ history.title }}
		</div>
		<div class="author">
            {{ 'Author : %author%'|trans({ '%author%': history.refuser.username }) }}
		</div>
        <div class="chapters">
            {{ 'Number of chapters : %count%'|trans({ '%count%': chapters|length }) }}
        </div>
		<div class="date">
            {{ 'Date of creation : %date%'|trans({ '%date%': history.createdat|format_date(locale: 'fr_FR', dateFormat: 'full') }) }}
		</div>
	</div>
</section>
