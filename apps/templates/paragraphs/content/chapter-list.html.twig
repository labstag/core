<section id="{{ paragraph_id(paragraph) }}" class="{{ paragraph_class(paragraph) }}"{{ paragraph_contextmenu(paragraph) }}>
    <div class="wrapper">
        {% if paragraph.title|length != 0 %}
            <div class="title">
                {{ paragraph.title }}
            </div>
        {% endif %}
        <ul>
            {% for row in chapters %}
                <li class="chapter-teaser">
                    {% include  "teasers/chapter.html.twig"  with {'chapter': row} %}
                </li>
            {% endfor %}
        </ul>
    </div>
</section>