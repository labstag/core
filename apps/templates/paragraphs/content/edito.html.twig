<section id="{{ paragraph_id(paragraph) }}" class="{{ paragraph_class(paragraph) }}">
    <h2>{{ paragraph.title }}</h2>
    <h3>{{ edito.title }}</h3>
    <img src="{{ site_asset(edito, 'img') }}" alt="{{ edito.title|e('html_attr') }}">
    {% for tab in paragraphs %}
        {{ debug_begin(tab) }}
        {{ paragraph_show(tab) }}
        {{ debug_end(tab) }}
    {% endfor %}
</section>