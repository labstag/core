<section id="{{ paragraph_id(paragraph) }}" class="{{ paragraph_class(paragraph) }}">
	<div class="background" style="--image-url: url('{{ site_asset(chapter, 'img') }}')"></div>
	<div class="wrapper">
		{% if chapter.tags|length > 0 %}
			<div class="tags">
				{% for tag in chapter.tags %}
					<span class="tag-{{ tag.slug }}">{{ tag.title }}</span>
				{% endfor %}
			</div>
		{% endif %}
		<div class="title">
			{{ chapter.title }}
		</div>
		<div class="date">
			{{ chapter.createdat|date('d/m/Y') }}
		</div>
	</div>
</section>
